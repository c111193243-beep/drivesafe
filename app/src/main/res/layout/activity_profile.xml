<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metalBackground"
    android:padding="24dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profileToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/metalBackground"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/textDark"
        app:title="個人資料"
        app:titleCentered="true"
        app:titleTextColor="@color/textDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 標題（保留，若你覺得多餘可移除） -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="個人資料"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textDark"
        app:layout_constraintTop_toBottomOf="@id/profileToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 姓名 -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="姓名：王小明"
        android:textSize="16sp"
        android:textColor="@color/textDark"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email：example@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/textDark"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 年齡 -->
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="年齡：30"
        android:textSize="16sp"
        android:textColor="@color/textDark"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 電話 -->
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="電話：0912-345678"
        android:textSize="16sp"
        android:textColor="@color/textDark"
        app:layout_constraintTop_toBottomOf="@id/tvAge"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 修改按鈕 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="編輯資料"
        android:textColor="@color/white"
        android:backgroundTint="@color/titaniumBlueGray"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
